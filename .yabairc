#!/usr/bin/env sh

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"


#DEBUG  -> observe with tail -f /tmp/yabai_$USER.out.log
#yabai -m config debug_output on

# BASICS

yabai -m config                                 \
    mouse_follows_focus          off            \
    focus_follows_mouse          off            \
    window_origin_display        default        \
    window_placement             second_child   \
    window_zoom_persist          on             \
    window_topmost               off            \
    window_shadow                on             \
    window_animation_duration    0.2            \
    window_animation_frame_rate  120            \
    window_opacity_duration      0.1            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.60           \
    window_opacity               off            \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  27             \
    bottom_padding               10             \
    left_padding                 10             \
    right_padding                10             \
    window_gap                   30             \
    layout                       bsp            \
    mouse_modifier               fn             \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            swap

# window layer fix for teams screen sharing
yabai -m window --layer normal

yabai -m config auto_balance on

# felixkratz/yabai config
yabai -m config auto_padding on
yabai -m config auto_padding_min_aspect 2.33
yabai -m config auto_padding_width 1300
yabai -m config auto_padding_height 1300

#RULES
yabai -m rule --add app="^Mail$" title="^Neue E-Mail$" manage=off 
yabai -m rule --add app="^Mail$" title="^Re:" manage=off 
yabai -m rule --add app=".*einstellungen" manage=off # System Preferences needs buggy regex
yabai -m rule --add app="^Finder$" title="^Infos zu:" manage=off
yabai -m rule --add app="^Finder$" title="^Kopieren$" manage=off
yabai -m rule --add app="^Keka$" manage=off
yabai -m rule --add app="^Adobe Illustrator" manage=off
yabai -m rule --add app="^Adobe Photoshop" manage=off

# need testing
yabai -m rule --add app="^Finder$" title="^Papierkorb$" manage=off
yabai -m rule --add app="^Archivierungsprogramm$" manage=off

#borders active_color=0xffe1e3e4 inactive_color=0x00494d64 width=5.0
echo "yabai configuration loaded.."
